{
	"name": "uGet Integration",
	"description": "Sends a link or group of links to the uGet download manager. uGet and this extensions are compatible with Linux & Windows.",
	"version": "1.0.0",
	"manifest_version": 2,

	"homepage_url": "http://uget.visuex.com/extchrome",
	"update_url": "http://uget.visuex.com/extchrome/updates.xml",

	"permissions": ["contextMenus", "tabs", "storage", "http://*/*",
					"https://*/*", "ftp://*/*", "file:///*/*"],

	"options_page": "options.html",

	"background": {
		"page": "background.html"
	},

	"icons": {
		"32": "uGet_32.png",
		"48": "uGet_48.png"
	},

	"plugins": [
		{ "path": "libsimpleGetPlugin.so", "public": false },
		{ "path": "libsimpleGetPlugin64.so", "public": false },
		{ "path": "npsimpleGetPlugin.dll", "public": false }
	]
}

